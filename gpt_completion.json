            "quantity": "3",
            "unit": null
        },
        {
            "ingredient_id": "2",
            "ingredient": "salt",
            "quantity": "1",
            "unit": "tsp."
        },
        {
            "ingredient_id": "3",
            "ingredient": "pepper",
            "quantity": "1/4",
            "unit": "tsp."
        },
        {
            "ingredient_id": "4",
            "ingredient": "half and half",
            "quantity": "2",
            "unit": "c."
        },
        {
            "ingredient_id": "5",
            "ingredient": "potatoes",
            "quantity": "3",
            "unit": "c."
        },
        {
            "ingredient_id": "6",
            "ingredient": "Cheddar cheese",
            "quantity": "1",
            "unit": "c."
        },
        {
            "ingredient_id": "7",
            "ingredient": "green onions",
            "quantity": "1/3",
            "unit": "c."
