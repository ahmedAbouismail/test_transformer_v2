    ],
    "steps": [
        {
            "step_id": "1",
            "instruction": "Beat eggs, salt and pepper until well blended."
        },
        {
            "step_id": "2",
            "instruction": "Stir in half and half, potatoes and onions."
        },
        {
            "step_id": "3",
            "instruction": "Pour into well-greased 8-inch baking dish."
        },
        {
            "step_id": "4",
            "instruction": "Bake in a 400\u00b0F oven for 35 to 40 minutes, or until knife inserted in center comes out clean and potatoes are tender."
        },
        {
            "step_id": "5",
            "instruction": "Cool on rack 5 minutes; cut into squares."
        }
    ]
